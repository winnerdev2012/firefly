  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug E2E Tests",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/test/e2e",
      "args": ["-test.run"],
      "env": {
        "STACK_FILE": "{env:HOME}/.firefly/stacks/firefly_e2e/stack.json"
      },
      "showLog": true
    },
    {
      "name": "Run FireFly Core",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "-f",
        "${env:HOME}/.firefly/stacks/dev/configs/firefly_core_0.yml"
      ]
    }
  ]
}
